{
  // Cloudflare Workers configuration for trainingslog
  //
  // Setup:
  // 1. Copy this file to wrangler.jsonc
  // 2. Create a Hyperdrive instance:
  //    wrangler hyperdrive create trainingslog-db --connection-string="postgresql://user:pass@host:5432/dbname"
  // 3. Replace YOUR_HYPERDRIVE_ID below with the ID from step 2
  // 4. Deploy: npm run deploy:cloudflare

  "name": "trainingslog",
  "main": ".open-next/worker.js",
  "compatibility_date": "2024-12-01",
  "compatibility_flags": ["nodejs_compat"],
  "assets": {
    "directory": ".open-next/assets",
    "binding": "ASSETS"
  },
  "hyperdrive": [
    {
      "binding": "HYPERDRIVE",
      "id": "YOUR_HYPERDRIVE_ID"
    }
  ]
}
